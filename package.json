{
  "name": "vitempl-monorepo",
  "private": true,
  "license": "MIT",
  "author": "Stepan Sotnikov",
  "description": "Template engine with Vite",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "homepage": "https://github.com/sotnikovse/vitempl#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sotnikovse/vitempl.git"
  },
  "bugs": {
    "url": "https://github.com/sotnikovse/vitempl/issues"
  },
  "keywords": [
    "frontend",
    "hmr",
    "dev-server",
    "build-tool",
    "vite"
  ],
  "packageManager": "pnpm@8.9.2",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "build": "pnpm -r --parallel --filter='./packages/*' run build",
    "release": "tsx scripts/release.ts",
    "format": "prettier --write --cache ."
  },
  "devDependencies": {
    "@types/node": "^18.18.0",
    "@vitejs/release-scripts": "^1.3.1",
    "conventional-changelog-cli": "^4.1.0",
    "execa": "^8.0.1",
    "picocolors": "^1.0.0",
    "prettier": "^3.0.3",
    "tsx": "^3.14.0",
    "typescript": "^5.0.2",
    "unbuild": "^2.0.0",
    "vite": "^4.4.5",
    "vite-plugin-inspect": "^0.7.40"
  },
  "pnpm": {
    "overrides": {
      "vitempl": "workspace:*"
    }
  }
}
